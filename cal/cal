#include <stdio.h>
#include <stdlib.h>

void resetMemory() {
    printf("✅ Calculator memory has been reset.\n");
}

void adjustBrightness() {
    int level;
    printf("Enter brightness level (1–10): ");
    scanf("%d", &level);
    if (level >=1 && level <=10)
        printf("✅ Brightness set to level %d.\n", level);
    else
        printf("⚠️ Invalid brightness level. Please try again.\n");
}

void calibrateKeys() {
    printf("⌛ Calibrating keys… Please press all keys as instructed.\n");
    printf("✅ Keys calibrated successfully.\n");
}

int main() {
    int choice;

    while (1) {
        printf("\n=== Calculator Maintenance Settings ===\n");
        printf("1. Reset Memory\n");
        printf("2. Adjust Brightness\n");
        printf("3. Calibrate Keys\n");
        printf("4. Exit\n");
        printf("Select an option: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                resetMemory();
                break;
            case 2:
                adjustBrightness();
                break;
            case 3:
                calibrateKeys();
                break;
            case 4:
                printf("👋 Exiting Calculator Maintenance Settings.\n");
                exit(0);
            default:
                printf("⚠️ Invalid option. Please try again.\n");
        }
    }

    return 0;
}
